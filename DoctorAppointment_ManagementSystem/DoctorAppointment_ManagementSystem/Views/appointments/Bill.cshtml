
@{
    ViewBag.Title = "Bill";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var data = ViewBag.data;
    var Paymentdata = ViewBag.Paymentdata;

}

<style>
    .header .head-right a:hover{
        color:black !important;
        text-decoration:none !important;
    }
</style>
<!-- General CSS Files -->
<link rel="stylesheet" href="/Content/assets/css/app.min.css">
<!-- Template CSS -->
<link rel="stylesheet" href="/Content/assets/css/style.css">
<link rel="stylesheet" href="/Content/assets/css/components.css">
<!-- Custom style CSS -->
<link rel="stylesheet" href="/Content/assets/css/custom.css">

<div class="main-content" style="margin-left:0px !important;">
    <section class="section">
        <div class="section-body">
            <div class="invoice">
                <div class="invoice-print">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="invoice-title">
                                <h2>Invoice</h2>
                                <div class="invoice-number">@(data == null ? "" : data.AppointmentNo)</div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <address>
                                        <strong>Billed To:</strong><br>
                                        @(data == null ? "N/A" : data.User1.FullName)<br>
                                        @(data== null ? "N/A" : data.User1.Phone)  <br>
                                        
                                        @(data == null ? "N/A" : data.User1.City.ToUpper())
                                    </address>
                                </div>
                                @*<div class="col-md-6 text-md-right">
                                    <address>
                                        <strong>Shipped To:</strong><br>
                                        Keith Johnson<br>
                                        197 N 2000th E<br>
                                        Rexburg, ID,<br>
                                        Springfield Center, USA
                                    </address>
                                </div>*@
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <address>
                                        <strong>Payment Method:</strong><br>
                                       CASH 
                                    </address>
                                </div>
                                <div class="col-md-6 text-md-right">
                                    <address>
                                        <strong>Requested Bill Date:</strong><br>
                                        @(DateTime.Now)<br><br>
                                    </address>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="section-title">Appointment Summary</div>
                            <p class="section-lead"></p>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-md">
                                    <tr>
                                        <th data-width="40">#</th>
                                        <th>Item</th>
                                        <th class="text-center">Appointment Date</th>

                                        <th class="text-center">Doctor</th>
                                        <th class="text-center">Reason</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Payment Date</th>
                                        <th class="text-right">Total</th>
                                    </tr>
                                   
                                    <tr>
                                        <td>1</td>
                                        <td>@(data == null ? "Not Available" : data.AppointmentNo)</td>
                                        <td class="text-center">@(data == null ? "Not Available" : data.AppDate.ToString("dd-MM-yyyy"))</td>
                                        <td class="text-center">@(data == null ? "Not Available" : data.User.FullName)</td>

                                        <td class="text-center">@(data == null? "Not Available" : data.Reason)</td>
                                        <td class="text-center">@(Paymentdata == null ? "Not Available" : Paymentdata.IsPaid == true ? "Paid" : "Not Paid")</td>
                                        <td class="text-right">@(Paymentdata == null ? "Not Available" : Paymentdata.PaidOn )</td>
                                        <td class="text-center">@(Paymentdata == null ? "Not Available" : Paymentdata.Fees)</td>

                                    </tr>
                                  
                                   
                                </table>
                            </div>
                          
                        </div>
                    </div>
                </div>
                <hr>
                @*<div class="text-md-right">
                    <div class="float-lg-left mb-lg-0 mb-3">
                        <button class="btn btn-primary btn-icon icon-left">
                            <i class="fas fa-credit-card"></i> Process
                            Payment
                        </button>
                        <button class="btn btn-danger btn-icon icon-left"><i class="fas fa-times"></i> Cancel</button>
                    </div>
                    <button class="btn btn-warning btn-icon icon-left"><i class="fas fa-print"></i> Print</button>
                </div>*@
            </div>
        </div>
    </section>
</div>


<script src="/Content/assets/js/app.min.js"></script>
