@model DoctorAppointment_ManagementSystem.Models.AppointmentRecommendation

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <strong><h4>Appointment's Recommendation</h4></strong>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.AppointmentId, "Select Appointment #", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("AppointmentId", null, htmlAttributes: new { @class = "form-control" , id="dropdown", style = "width: 240px" })
            @Html.ValidationMessageFor(model => model.AppointmentId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Recommendation, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Recommendation, 5, 5, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Recommendation, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Recommedation" class="btn btn-primary" />
        </div>
    </div>
</div>
}

