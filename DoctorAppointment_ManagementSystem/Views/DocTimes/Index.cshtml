@model IEnumerable<DoctorAppointment_ManagementSystem.Models.DocTime>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.isBooked)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.timeslot.slotName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.isBooked)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.timeslot.slotName)
        </td>
        <td>
            @if (Convert.ToInt32(Session["UserRole"]) == 1)
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
            @Html.ActionLink("Details", "Details", new { id = item.ID }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            }
          
        </td>
    </tr>
}

</table>
